@model SistemaBiblioteca.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h1 class="mb-3 text-danger">Eliminar Categoría</h1>
<hr />

<h4>¿Estás seguro que deseas eliminar esta categoría?</h4>

<div class="card col-md-6 p-3">
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descripcion)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Codigo)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Codigo)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd class="col-sm-8">
            @(Model.Estado ? "Activo" : "Inactivo")
        </dd>
    </dl>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑 Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">↩ Cancelar</a>
</form>
